<rootMyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        GridLayout:
            cols: 2
            size_hint_y: 1/3
            Label:
                text: "Username: "
            TextInput:
                id: uname
                multiline: False
                background_color: (0,1,1,.5)
            Label:
                text: "Password: "
            TextInput:
                id: pword
                password: True
                multiline: False
                background_color: (0,1,1,.5)
        GridLayout:
            cols:1
            size_hint_y: 1/3
            Button:
                text: "Log Me In!"
                on_press: root.ClickLogin()
                background_color: (0,1,1,1)
            Label:
                id: resultlogin
                text: ""
                background_color: (0,1,1,.5)
