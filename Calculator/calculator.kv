<Button>
    font_size: 24

<calculatorLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id: displayLbl
            text:"0"
            pading: 100
            color:(0,0,0,1)
            font_size: 42
            text_size: self.size
            halign: 'right'
            valign: 'center'

            canvas.before :
                Color :
                    rgba : (1,1,1,1)
                Rectangle :
                    size : self.size
                    pos : self.pos 

        GridLayout:
            cols : 3
            size_hint_y : 1/3
            Button :
                text :"AC"
                on_press : root.clear()
                
                
            Button :
                size_hint_x: 0.5
                text: "("
                on_press: root.addOperator("(")
            Button:
                size_hint_x:0.5
                text:")"
                on_press: root.addOperator(")")

        GridLayout:
            cols : 3
            size_hint_y: 1/3
            Button:
                text:"DEL"
                on_press: root.remove()
            Button:
                size_hint_x:0.5
                text:"^"
                on_press: root.addOperator("^")
            Button:
                size_hint_x:0.5
                text:"+"
                on_press: root.addOperator("+")    

        GridLayout:
            cols : 4
            Button:
                text:"7"
                on_press: root.addNumber("7")
            Button:
                text:"8"
                on_press: root.addNumber("8")
            Button:
                text:"9"
                on_press: root.addNumber("9")
            Button:
                text:"-"
                on_press: root.addOperator("-")
            Button:
                text:"4"
                on_press: root.addNumber("4")
            Button:
                text:"5"
                on_press: root.addNumber("5")
            Button:
                text:"6"
                on_press: root.addNumber("6")
            Button:
                text:"*"
                on_press: root.addOperator("*")
            Button:
                text:"1"
                on_press: root.addNumber("1")
            Button:
                text:"2"
                on_press: root.addNumber("2")
            Button:
                text:"3"
                on_press: root.addNumber("3")
            Button:
                text:"/"
                on_press: root.addOperator("/")

        GridLayout:
            cols: 3
            size_hint_y: 1/3
            Button:
                text:"0"
                on_press: root.addNumber("0")
            Button:
                size_hint_x:0.5
                text:"."
                on_press: root.addPoint()
            Button:
                size_hint_x:0.5
                text:"="
                on_press: root.calculate()
